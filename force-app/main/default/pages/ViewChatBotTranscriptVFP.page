<apex:page showHeader="false" controller="GetChatBotTranscriptController" >
    <apex:pageBlock title="User details" >
        <label style="font-size:15px;font-weight: bold;">Customer full name: </label><label style="font-size:15px;">{!username}</label><br/><br/>
        <label style="font-size:15px;font-weight: bold;">Customer HKID: </label><label style="font-size:15px;">{!hkId}</label><br/><br/>
        <label style="font-size:15px;font-weight: bold;">Phone Number: </label><label style="font-size:15px;">{!phoneNumber}</label><br/><br/>
        <label style="font-size:15px;font-weight: bold;">Whatsapp Phone Number: </label><label style="font-size:15px;">{!whatsappPhoneNumber}</label><br/><br/>
    </apex:pageBlock>
    <apex:pageBlock title="Chatbot chat history" >
        <apex:pageBlockTable value="{!messageList}" var="msg" style="font-size:15px;">
            <apex:column headerValue="Message history" value="{!msg}"/>
        </apex:pageBlockTable>
    </apex:pageBlock>
      <apex:form id="apForm">
          <apex:outputPanel id="phoneOutput">
              <apex:outputText value=""/>
          </apex:outputPanel>
          <apex:actionFunction action="{!acknowledgement}" name="acknowledgement"  rerender="phoneOutput">
          </apex:actionFunction>
    </apex:form>
<script>
   acknowledgement();
</script>
</apex:page>