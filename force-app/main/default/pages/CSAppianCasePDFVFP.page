<apex:page showHeader="false" applyHtmlTag="false" cache="true"  controller="CSAppianCasePDFCtrl" renderAs="PDF">
    <head>
        <style >
            div.header {
                color: #000 !important;
                font-size: 18px !important;
                font-weight: bold !important;
                font-family: Arial,Helvetica,sans-serif !important;
                padding:9px !important;
                
            }
            .rTable { 
                display: table; 
                width: 100%;
                float: left;
                
            }
            .rTableRow { 
                display: table-row; 
            }
            
            .rTableCell_title { 
                display: table-cell; 
                border-collapse: collapse;
                //border:1px solid #cccccc !important;
                padding:5px 10px;                
                width: 20%;
                font-weight: bold;
                vertical-align: top;
            }
            
            .rTableCell { 
                display: table-cell; 
                border-collapse: collapse;
                //border:1px solid #cccccc !important;
                padding:5px;
                width: 25%;
                word-break: break-word !important;
            }
            
        </style>
    </head>
    <div>
        <c:CSAppianCasePDFComponent componentValue="{!controllerValue}"/>
    </div>
</apex:page>