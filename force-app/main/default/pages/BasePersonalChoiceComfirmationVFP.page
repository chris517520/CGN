                    //only allow english character and numbers

                    if(/^[0-9a-zA-Z]*$/.test(value)) {
                        return true;
                    }
                    return false;
                }
                function checkChinese(value){
                     // AutoSave();
                    if(/.*[\u4e00-\u9fa5]+.*$/.test(value)) {
                        return false;
                    }
                    return true;
                }
                function validateLength(value, len){
