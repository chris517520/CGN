                        console.log('###test showPaymentMode222');
                        $("#errCheckacceptTC").show();
                        //CR-56_Link_20220214
                        $("#errCheckacceptTC").trigger("focus");
                        acceptTCvalid=0;
                    }else{
                        acceptTCvalid=1;
                        $("#errCheckacceptTC").hide();
                    }
                    if(validate()&&paymodevalid&&acceptTCvalid){
                        nextStep();

                    }
                }
                function filedChangeAutoSave(evt){
                    var Id = evt.id;
                    var val=$(evt).valid();
                    if(val){
                        AutoSave();
                    }
                   // AutoSave();
                }
                function checkFirstCharacter(value){
                    // AutoSave();
                    //the first character cannot be space and *
                    if(value.indexOf('*') == 0 || value.indexOf(' ') == 0){
                        return false;
                    }
                    return true;
                }
                function checkContactNoLength(value){
                    // AutoSave();
                    if(value.length > 20){
                        return false;
                    }
                    return true;
                }
                function redirect(){
                    Cigna.Util.navigateToVFP("CusPersonalChoicePaymentVFP?tid={!txn.id}&lang={!$Label.Header_Language_Code_Current}", null, null,null,false);
                }

                return {
                    onCheckboxChangeTC:onCheckboxChangeTC,
                    onRadioChangeTc:onRadioChangeTc,
                    goBack:goBack,
                    checkHKID:checkHKID,
                    next:next,
                    validate2:validate2,
                    filedChangeAutoSave:filedChangeAutoSave,
                    checkFirstCharacter:checkFirstCharacter,
                    redirect:redirect,
                    checkContactNoLength:checkContactNoLength,
                    checkChinese:checkChinese,
                    validateLength:validateLength
                }

            }();
