                $("form[id$='form']").validate();
                $("input[id*='-HKID']").each(function(idx, elem){
                    console.log('12121212121212'+$(elem).val());
                    $(elem).rules("add", {
                        required : true,
                        checkHKID : true,
                        validateLength10 : true
                    });
                });

                $("input[id*='PH-Email-bk']").rules("add", {
                    emailStrict: true,
                    checkChinese : true,
                    required: true,
                    validateLength50 : true
                });
                $("input[id*='PI-Email-bk']").rules("add", {
                    emailStrict: true,
                    checkChinese : true,
