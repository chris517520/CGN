                    validateLength50 : true
                });
                $("input[id*='-Firstname']").each(function(idx, elem){
                    $(elem).rules("add", {
                        checkFirstCharacter : true,
                        required: true,
                        validateLength42 : true
                    });
                });
                $("input[id*='-Lastname']").each(function(idx, elem){
                    $(elem).rules("add", {
                        checkFirstCharacter : true,
                        required: true,
                        validateLength42 : true
                    });
                });
                $("input[id*='PH-CountryCode']").rules("add", {
                    required: true
                });
                $("input[id*='PI-CountryCode']").rules("add", {
                    required: true
                });
                $("input[id*='-ContactNo']").rules("add", {
                    required: true,
                    digits: true,
                    checkContactNoLength : true
                });
                $("input[id*='PI-ContactNo']").rules("add", {
                    required: true,
                    digits: true,
                    checkContactNoLength : true
                });
               
            });
