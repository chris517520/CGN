<apex:page standardController="Campaign" extensions="TMCampaignBatchApproveCtrl" tabStyle="Campaign" recordSetVar="campaign">
      
      <apex:form id="ApproveCampaigns">
      
          <apex:outputPanel rendered="{! !isApprove}">
              <apex:outputLabel id="tip" style="text-color:red" value="{!tip}"/><br/>
              <apex:commandButton value="Cancel" action="{!Cancel}"/>
          </apex:outputPanel>
      
          <apex:outputPanel id="ApprovalBatchCampaignRecord" title="Approval Campaigns" rendered="{! isApprove}">
              <apex:pageBlock title="Approval Campaigns">
                  <apex:pageBlockSection collapsible="false" columns="1">
                      <apex:pageBlockSectionItem >
                      <apex:outputLabel value="Comments"/>
                      <apex:inputTextarea value="{!comms}" title="Comments" style="width:50%;" rows="6"/>
                      </apex:pageBlockSectionItem>
                  </apex:pageBlockSection>
                  <div  style="text-align:center">
                      <apex:commandButton value="Approve" action="{!Approve}"/>
                      <apex:commandButton value="Reject" action="{!Reject}"/>
                      <apex:commandButton value="Cancel" action="{!Cancel}"/>
                  </div>
              </apex:pageBlock>
          </apex:outputPanel>
      </apex:form>
      
      <script>
          
      </script>
      
</apex:page>