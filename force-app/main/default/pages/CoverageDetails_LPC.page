<apex:page >
    <apex:stylesheet value="{!URLFOR($Resource.Cigna_HK_Icons, 'Cigna-HK-Icons.css')}"/>
    <style>
        @media screen and (max-width: 767px) and (min-width: 0px){
            
            .read-more-content {
                font-size: 0;
                display: none;
                transition: .25s ease;
            }
            .read-more-checkbox:checked ~ .read-more-wrapper .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: inline-block;
                padding: 5px;
                border-radius: 3px;
                font-size: .9em;
                margin-bottom: 15px !important;
                cursor: pointer;
            }
            .productDetails div{
                padding: 0px;
            }
            .productDetails{
                padding: 0px;
            }
        }
        @media screen and (max-width: 950px) and (min-width: 0px){
            .stacked-table.table td.mobile-heading {
                text-align: center;
                width: 100%!important;
                background-color: #d9d9d6;
            }
            .stacked-table.table td, .stacked-table .table th {
                text-align: center;
            }
            .stacked-table.table td.col-xs-2-4 {
                width: 20%;
            }
            .stacked-table.table tr>td+td {
                background-color: #fff;
            }
            .stacked-table.table td, .stacked-table .table th {
                text-align: center;
            }
            .productDetailsTable{
                padding: 0px;
            }
            .bs .hidden-table{
                display: none!important;
            }
            .bs .visible-table{
                display: block!important;
            }
        }
        @media screen and (min-width: 951px) {
            .bs .hidden-table{
                display: block!important;
            }
            .bs .visible-table{
                display: none!important;
            }
        }
        @media screen and (min-width: 768px) {
            .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: none !important;
            }
        }
        .read-more-checkbox {
            display: none;
        }
        .read-more-checkbox ~ .read-more-button:before {
            content: '{!$Label.Show_more}';
        }
        .read-more-checkbox:checked ~ .read-more-button:before {
            content: '{!$Label.Show_less}';
        }
    </style>
    <div class="bs col-xs-12 productDetails">
        <div class="bs col-sm-6 col-xs-12">
            <div class="bs col-sm-2 col-xs-2">
                <i class="ci-hk-bargraph ci-hk-2x"></i>
            </div>
            <div class="bs col-sm-10 col-xs-10">
                <input id="bene-01" type="checkbox" class="read-more-checkbox" />
                <div class="read-more-wrapper">
                    <p>{!$Label.Coverage_LPC_01}<br/></p>
                    <p>{!$Label.Coverage_LPC_Details_01_02}</p>
                    <span class="read-more-content">
                        <p>{!$Label.Coverage_LPC_02}</p>
                        <p>{!$Label.Coverage_LPC_03}</p>
                        <p>{!$Label.Coverage_LPC_04}</p>
                        <p>{!$Label.Coverage_LPC_05}</p>
                        <p>{!$Label.Coverage_LPC_06}</p>
                    </span>
                </div>
                <label for="bene-01" class="read-more-button cigna-fg-blue-medium"></label>
            </div>
        </div>
        <div class="bs col-sm-6 col-xs-12" >
            <div class="bs col-sm-2 col-xs-2">
                <i class="ci-hk-checklist ci-hk-2x"></i>
            </div>
            <div class="bs col-sm-10 col-xs-10">
                <label class="text-uppercase">{!$Label.Renewal_LPC}</label>
                <p>{!$Label.Coverage_LPC_Renewal}<br/></p>
                <p>{!$Label.Coverage_LPC_Renewal_02}</p>
            </div>
        </div>
        <div class="bs col-sm-6 col-xs-12">
            <div class="bs col-sm-2 col-xs-2">
                <i class="ci-hk-ekg ci-hk-2x"></i>
            </div>
            <div class="bs col-sm-10 col-xs-10">
                <Label class="text-uppercase">{!$Label.COMPLIMENTARY_BENEFITS_Label}</Label>
                <p>{!$Label.Coverage_LPC_Benefit_01}<br/></p>
                <p>{!$Label.Coverage_LPC_Benefit_01_02}</p>
                <p>{!$Label.Coverage_LPC_Benefit_02}</p>
                <p>{!$Label.Coverage_LPC_Benefit_03}</p>
                <p>{!$Label.Coverage_LPC_Benefit_04}</p>
            </div>
        </div>
        <div class="bs col-sm-6 col-xs-12">
            <div class="bs col-sm-2 col-xs-2">
                <i class="ci-hk-dollar ci-hk-2x"></i>
            </div>
            <div class="bs col-sm-10 col-xs-10">
                <Label class="text-uppercase">{!$Label.COVERAGE_AMOUNT_Label}</Label>
                <p>{!$Label.Coverage_LPC_Amount}</p>
            </div>
        </div>
        <div class="bs col-xs-12">
            <div class="bs col-sm-1 col-xs-2">
                <i class="ci-hk-calendar-day ci-hk-2x"></i>
            </div>
            <div class="bs col-sm-11 col-xs-10">
                <label>{!$Label.Issue_Age_Label}</label>
                <p>
                    {!$Label.Coverage_LPC_Age}
                </p>
            </div>
        </div>
    </div>
</apex:page>