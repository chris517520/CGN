                                <!-- <div style="display:flex;align-items:center;justify-content:center"> -->
                                    <img class="bs" style="display:flex;align-items:center;justify-content:center" src="{!URLFOR($Resource.mycigna_android_app_qr)}" width="140px" />
                                <!-- </div> -->
                                <div></div>
                                <br/>
                                <br/>
                                <p>{!$Label.QR_Reminder_iOS}</p>
                                <!-- <div style="display:flex;align-items:center;justify-content:center"> -->
                                    <img class="bs" src="{!URLFOR($Resource.mycigna_ios_app_qr)}" width="140px" />
                                <!-- </div> -->
                            </div>
                        </apex:outputPanel>
                    </apex:outputPanel>
                </div>
            </div>
            <br/>
            <br/>
            <div id="app-reminder" class="bs col-xs-12" 
                style="padding-left: 30px;
                padding-right: 30px;
                font-size: 1.2em;" >
                <div class="bs col-xs-12" 
                style="padding: 10px 10px 10px 10px;" >
                {!$Label.QR_Reminder_MySetting}
                </div>
            </div>
            <div class="bs col-xs-12" style="font-size: 1.1em;">
                <br/>
                <!-- <apex:outputLink value="{!$Label.Customer_Login_VFP}?lang={!JSINHTMLENCODE($CurrentPage.Parameters.lang)}">{!$Label.Return_To_Login_Page}</apex:outputLink> -->
                <li id="Go_back_to_previouse_page" onclick="back()" style="list-style:none;"><a href="#" style="text-decoration:none; color:#000000; outline:none; cursor:pointer;"><h5>{!$Label.Go_back_to_previouse_page}</h5></a></li>
            </div>
            <div id="login-loading" class="bs col-xs-offset-3 col-xs-6 text-center" style="display:none;">
                <img class="bs" src="{!URLFOR($Resource.Spinners, 'slds_spinner_inverse.gif')}" width="70px" />
            </div>
        </apex:define>
</apex:page>