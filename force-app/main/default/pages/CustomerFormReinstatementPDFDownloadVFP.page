     </table>
     
     <apex:outputPanel rendered="{!IF(policyChangeRequestInfo.Reinstatement_existing_insurance__c != null &&
                                      policyChangeRequestInfo.Reinstatement_existing_insurance__c != '' &&
                                      policyChangeRequestInfo.Reinstatement_existing_insurance__c == 'YES' , true, false)}">
