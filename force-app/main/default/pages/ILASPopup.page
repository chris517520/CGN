            padding:10px;
            color:#000;
            font-size:12px;
            width: 100%;
            height: 95%;
            overflow-y:auto;
          }
          .tableCS>thead>tr>th,
          .tableCS>tbody>tr>td {
            border:1px solid;
            text-align: center;
          } 
    </style>
    <script>
        function showILASPanl() {
            var overlay = document.getElementById('overlayILAS');
            var ilasBox = document.getElementById('ilasBox');
            overlay.style.opacity = .95;
            if (overlay.style.display == "block") {
                overlay.style.display = "none";
                ilasBox.style.display = "none";
            } else {
                overlay.style.display = "block";
                ilasBox.style.display = "block";
            }
            return false;
        }
    </script>
    
