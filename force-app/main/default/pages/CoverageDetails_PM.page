<apex:page >
    <apex:stylesheet value="{!URLFOR($Resource.Cigna_HK_Icons, 'Cigna-HK-Icons.css')}"/>
    <style>
        @media screen and (max-width: 767px) and (min-width: 0px) {
            .read-more-content {
                font-size: 0;
                display: none;
                transition: .25s ease;
            }
            .read-more-checkbox:checked ~ .read-more-wrapper .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: inline-block;
                padding: 5px;
                border-radius: 3px;
                font-size: .9em;
                margin-bottom: 15px !important;
                cursor: pointer;
            }
            .productDetails div{
                padding: 0px;
            }
            .productDetails{
                padding: 0px;
            }
        }
        @media screen and (min-width: 768px) {
            .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: none !important;
            }
        }
        .read-more-checkbox {
            display: none;
        }
        .read-more-checkbox ~ .read-more-button:before {
            content: '{!$Label.Show_more}';
        }
        .read-more-checkbox:checked ~ .read-more-button:before {
            content: '{!$Label.Show_less}';
        }
        
    </style>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-hospital-bed ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <!-- Rancho_HKITSFDC264_20250903 - update font -->
            <label>{!$Label.Coverage_TU_Hospital_Surgical_Bene}</label>
            <input id="bene-01" type="checkbox" class="read-more-checkbox" />
            <div class="read-more-wrapper">
                <p>{!$Label.Coverage_PM_Bene_01}</p>
                <span class="read-more-content">
                    <p>{!$Label.Coverage_PM_Bene_02}</p>
                    <p>{!$Label.Coverage_PM_Bene_03}</p>
                    <p>{!$Label.Coverage_PM_Bene_05}</p>
                </span>
            </div>
            <label for="bene-01" class="read-more-button cigna-fg-blue-medium"></label>
        </div>
    </div>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-calendar-day ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <!-- Rancho_HKITSFDC264_20250903 - update font -->
            <label>{!$Label.Issue_Age_Label}</label>
            <p>{!$Label.Coverage_PM_Age}</p>
        </div>
    </div>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-offical-document ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <!-- Rancho_HKITSFDC264_20250903 - update font -->
            <label>{!$Label.Coverage_Guaranteed_Renewal}</label>
            <p>{!$Label.Coverage_PM_Guarantee_Renewal}</p>
        </div>
    </div>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-checklist ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <!-- Rancho_HKITSFDC264_20250903 - update font -->
            <label>{!$Label.COVERAGE_AMOUNT_Label}</label>
            <p>{!$Label.Coverage_PM_Coverage_Amount}</p>
        </div>
    </div>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-star ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <!-- Rancho_HKITSFDC264_20250903 - update font -->
            <label>{!$Label.EXCLUSIVE_PRIVILEGES_Label}</label>
            <input id="bene-02" type="checkbox" class="read-more-checkbox" />
            <div class="read-more-wrapper">
                <p>{!$Label.Coverage_PM_Exclusive_01}</p>
                <span class="read-more-content">
                    <p>{!$Label.Coverage_PM_Exclusive_02}</p>
                    <p>{!$Label.Coverage_PM_Exclusive_03}</p>
                </span>
            </div>
            <label for="bene-02" class="read-more-button cigna-fg-blue-medium"></label>
        </div>
    </div>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-needle ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <!-- Rancho_HKITSFDC264_20250903 - update font -->
            <label>{!$Label.CIGNA_LIFELONG_PREVENTIVE_PROGRAM}</label>
            <p>{!$Label.Coverage_PM_Life_Program_01}</p>
            <p>{!$Label.Coverage_PM_Life_Program_02}</p>
        </div>
    </div>
</apex:page>