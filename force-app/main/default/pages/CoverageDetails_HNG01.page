<apex:page >
    <apex:stylesheet value="{!URLFOR($Resource.Cigna_HK_Icons, 'Cigna-HK-Icons.css')}"/>
    <style>
        @media screen and (max-width: 767px) and (min-width: 0px){
            .stacked-table.table td.mobile-heading {
                text-align: center;
                display: inline-block;
                width: 100%!important;
                background-color: #d9d9d6;
            }
            .stacked-table.table td, .stacked-table .table th {
                text-align: center;
                display: inline-block;
                float: left;
            }
            .stacked-table.table td.col-xs-2-4 {
                width: 20%;
            }
            .stacked-table.table tr>td+td {
                background-color: #fff;
            }
            .stacked-table.table td, .stacked-table .table th {
                text-align: center;
                display: inline-block !important;
                float: left !important;
            }
            
            .read-more-content {
                font-size: 0;
                display: none;
                transition: .25s ease;
            }
            .read-more-checkbox:checked ~ .read-more-wrapper .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: inline-block;
                padding: 5px;
                border-radius: 3px;
                font-size: .9em;
                margin-bottom: 15px !important;
                cursor: pointer;
            }
            .productDetails div{
                padding: 0px;
            }
            .productDetails{
                padding: 0px;
            }
        }
        
        @media screen and (min-width: 768px) {
            .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: none !important;
            }
        }
        .read-more-checkbox {
            display: none;
        }
        .read-more-checkbox ~ .read-more-button:before {
            content: '{!$Label.Show_more}';
        }
        .read-more-checkbox:checked ~ .read-more-button:before {
            content: '{!$Label.Show_less}';
        }
        
    </style>
