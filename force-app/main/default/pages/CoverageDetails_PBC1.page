<apex:page >
    <apex:stylesheet value="{!URLFOR($Resource.Cigna_HK_Icons, 'Cigna-HK-Icons.css')}"/>
    <style>
        @media screen and (max-width: 767px) and (min-width: 0px) {
            .read-more-content {
                font-size: 0;
                display: none;
                transition: .25s ease;
            }
            .read-more-checkbox:checked ~ .read-more-wrapper .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: inline-block;
                padding: 5px;
                border-radius: 3px;
                font-size: .9em;
                margin-bottom: 15px !important;
                cursor: pointer;
            }
            .productDetails div{
                padding: 0px;
            }
            .productDetails{
                padding: 0px;
            }
        }
        @media screen and (min-width: 768px) {
            .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: none !important;
            }
        }
        .read-more-checkbox {
            display: none;
        }
        .read-more-checkbox ~ .read-more-button:before {
            content: '{!$Label.Show_more}';
        }
        .read-more-checkbox:checked ~ .read-more-button:before {
            content: '{!$Label.Show_less}';
        }
        
    </style>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-user ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <label class="text-uppercase">{!$Label.Coverage_Outpatient_Benefits}</label>
            <p>{!$Label.Coverage_PBC_Outpatient_Bene}</p>
        </div>
    </div>
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-tooth ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <label class="text-uppercase">{!$Label.Coverage_Dental_Benefits}</label>
            <p>{!$Label.Coverage_PBC_Dental_Benefit}</p>
        </div>
    </div>
   
    <div class="bs col-sm-6 col-xs-12 productDetails">
        <div class="bs col-sm-2 col-xs-2">
            <i class="ci-hk-heart ci-hk-2x"></i>
        </div>
        <div class="bs col-sm-10 col-xs-10">
            <label class="text-uppercase">{!$Label.Coverage_Wellness_Benefits}</label>
            <p>{!$Label.Coverage_PBC_Wellness_Benefit}</p>
        </div>
    </div>
</apex:page>