<apex:page showHeader="false" applyHtmlTag="false" cache="true"  controller="PreauthPendInfoPdfCtrl" renderAs="pdf">
<head>
	<title></title>
	<style type="text/css">
        @page{
            size:A4 portrait;

            @bottom-right {

                content: "Page " counter(page) " - " counter(pages);

                font-family: 'Arial', 'Helvetica', sans-serif;

                font-size:10px;

            }

        }
    </style>
</head>
 <body style="height: auto; min-height: auto;">

<apex:outputText value="{!pendingInfor}" escape="false"/>
</body>
</apex:page>