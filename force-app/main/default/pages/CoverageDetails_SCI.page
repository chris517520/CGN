    <style>
        @media screen and (max-width: 767px) and (min-width: 0px){
            
            .read-more-content {
                font-size: 0;
                display: none;
                transition: .25s ease;
            }
            .read-more-checkbox:checked ~ .read-more-wrapper .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: inline-block;
                padding: 5px;
                border-radius: 3px;
                font-size: .9em;
                margin-bottom: 15px !important;
                cursor: pointer;
            }
            .productDetails div{
                padding: 0px;
            }
            .productDetails{
                padding: 0px;
            }
        }
        @media screen and (max-width: 950px) and (min-width: 0px){
            .stacked-table.table td.mobile-heading {
                text-align: center;
                width: 100%!important;
                background-color: #d9d9d6;
            }
            .stacked-table.table td, .stacked-table .table th {
                text-align: center;
            }
            .stacked-table.table td.col-xs-2-4 {
                width: 20%;
            }
            .stacked-table.table tr>td+td {
                background-color: #fff;
            }
            .stacked-table.table td, .stacked-table .table th {
                text-align: center;
            }
            .productDetailsTable{
                padding: 0px;
            }
            .bs .hidden-table{
                display: none!important;
            }
            .bs .visible-table{
                display: block!important;
            }
        }
        @media screen and (min-width: 951px) {
            .bs .hidden-table{
                display: block!important;
            }
            .bs .visible-table{
                display: none!important;
            }
        }
        @media screen and (min-width: 768px) {
            .read-more-content {
                display: block;
                font-size: inherit;
            }
            .read-more-button {
                display: none !important;
            }
        }
        .read-more-checkbox {
            display: none;
        }
        .read-more-checkbox ~ .read-more-button:before {
            content: '{!$Label.Show_more}';
        }
        .read-more-checkbox:checked ~ .read-more-button:before {
            content: '{!$Label.Show_less}';
        }
    </style>
